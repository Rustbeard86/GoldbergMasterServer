{
  // Server configuration
  "Server": {
    // The UDP port the master server listens on
    "Port": 47584,
    // How often to check for and remove inactive peers (in seconds)
    "PeerCleanupIntervalSeconds": 10,
    // How long before a peer is considered inactive (in seconds)
    "PeerTimeoutSeconds": 30,
    // Master server's SteamID (hex: 0x100001DEADBEEF)
    "MasterServerSteamId": 1125903709880047
  },
  // Logging configuration
  "Logging": {
    "LogLevel": {
      // Default logging level for all categories
      "Default": "Information",
      // Microsoft framework logging level
      "Microsoft": "Warning",
      // System logging level
      "System": "Warning"
    },
    "Debug": {
      // Enable debug level logging
      "EnableDebug": false
    }
  }
}